import sys
import math
from collections import deque

input = sys.stdin.readline


def task(n, a):
    dp = [0] * n
    dp[n - 1] = a[-1]
    for i in reversed(range(n - 1)):
        dp[i] = dp[i + 1] + a[i]

    mn = math.inf
    mni = -1
    for i in range(n):
        if dp[i] < mn:
            mn = dp[i]
            mni = i

    ans = 0
    for i in range(mni):
        ans += a[i]

    print(a, dp, mn, mni)
    print(ans)


t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    task(n, a)
