def task(x, y, z, s):
    caps = False
    ans = 0
    seq = 0
    for i in range(len(s)):
        c = s[i]
        seq += 1

        # print(c, caps, seq, ans)

        if i == len(s) - 1 or s[i + 1] != c:
            if (c == 'a' and not caps) or (c == 'A' and caps):
                xx = x * seq
                yy = y * seq + z
                if xx < yy:
                    ans += xx
                else:
                    ans += yy
                    caps = not caps
            elif (c == 'a' and caps) or (c == 'A' and not caps):
                xx = x * seq + z
                yy = y * seq
                # print('yyy', xx, yy)
                if xx <= yy:
                    ans += xx
                    caps = not caps
                else:
                    ans += yy
            seq = 0
            # print(ans)

    print(ans)


x, y, z = map(int, input().split())
s = input()
task(x, y, z, s)
